<Page x:Class="TreeApp.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TreeApp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page1">

    <Grid x:Name="Page1ForWin">
        <GroupBox Header="Какой-то заголовок">
            <TextBlock><Run Text="Текст обычный"/><InlineUIContainer>
                <TreeView x:Name="treeView" Height="100" Width="100"/>
            </InlineUIContainer><InlineUIContainer>
                <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
            </InlineUIContainer><InlineUIContainer>
                <Button x:Name="button" Content="Button" Width="75"/>
            </InlineUIContainer></TextBlock>
        </GroupBox>
    </Grid>
</Page>
